.side_bar
  .side__header
    .side__box
      .side__box__name
        = current_user.name
      %ul.side__box__menu
        %li.side__box__menu__new
          = link_to new_group_path do
            = icon('fas','edit', class:"side__box__menu__icon")
        %li.side__box__menu__edit
          = link_to edit_user_path(current_user) do
            = icon('fas','cog', class:"side__box__menu__icon")
  .side_bar_group_list
    - current_user.groups.each do |group|
    .group
      = link_to '#' do
      .group-name
        = group.name
      .group_message
        %p hello
    .group
      .group-name
        %p techexpet
      .group_message
        %p まだメッセージはありません


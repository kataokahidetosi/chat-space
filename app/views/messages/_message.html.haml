.messagefield__box
  .messagefield__box__info
    .messagefield__box__info__username
      = message.user.name
    .messagefield__box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messagefield__box__comment
    - if message.content.present?
      %p.messagefield__box__comment__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
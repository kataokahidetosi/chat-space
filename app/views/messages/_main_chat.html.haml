.chat
  .right_header
    .right_header__group
      .right_header__group_name
        =@group.name
      %ul.right_header__group__list
        Member :
        %li.right_header__group__list__name
          - @group.users.each do |user|
            =user.name
    %ul.right_header__edit
      = link_to edit_group_path(@group) do
        .right_header__edit__btn 
          edit
       
        
  .messagefield
    = render @messages
    
  .form
    =form_with model: [@group, @message], html: {class: "new_message"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'        
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'input-box__image__icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'